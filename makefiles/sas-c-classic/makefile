# makefile for GNU make (automatically generated by makemake)
# NOTE: indent with TAB in GNU makefiles!

# paths are relative to the project directory (current directory during make)

EXE    = bin/sas-c-classic/DoomLikeEngine
OBJDIR = o/sas-c-classic/
OPTS   = Math=ffp

# compiler and linker

CC = sc:c/sc
LD = sc:c/sc

# target 'all' (default target)

all : $(EXE)

$(OBJDIR)main.o : main.c graphics.c graphics.h keyboard.c keyboard.h 3D.c 3D.h timer.c timer.h
	$(CC) nolink $(OPTS) main.c graphics.c graphics.h keyboard.c keyboard.h 3D.c 3D.h timer.c timer.h

$(OBJDIR)graphics.o : graphics.c
	$(CC) nolink $(OPTS) graphics.c

$(OBJDIR)keyboard.o : keyboard.c
	$(CC) nolink $(OPTS) keyboard.c

$(OBJDIR)3D.o : 3D.c
	$(CC) nolink $(OPTS) 3D.c

$(OBJDIR)timer.o : timer.c
	$(CC) nolink $(OPTS) timer.c

OBJS = $(OBJDIR)main.o $(OBJDIR)graphics.o $(OBJDIR)keyboard.o $(OBJDIR)3D.o $(OBJDIR)timer.o

$(EXE) : $(OBJS)
	$(LD) link $(OPTS) $(OBJS)

# target 'clean'

clean:
	-delete $(EXE)
	-delete $(OBJDIR)\*.o
